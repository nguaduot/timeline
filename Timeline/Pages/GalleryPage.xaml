<Page x:Class="Timeline.Pages.GalleryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Timeline.Pages"
      xmlns:localB="using:Timeline.Beans"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="GalleryTemplate"
                      x:DataType="localB:Meta">
            <Image Stretch="UniformToFill" Source="{x:Bind Thumb}" />
        </DataTemplate>

    </Page.Resources>

    <GridView Name="GridGallery"
              ItemTemplate="{StaticResource GalleryTemplate}"
              IsItemClickEnabled="True"
              ItemClick="GridGallery_ItemClick"
              SelectionMode="Single" />

</Page>
