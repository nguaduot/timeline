                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                          FontSize="16"
                                          Glyph="&#xE8CB;" />
                                <TextBlock Grid.Column="1"
                                           x:Uid="TextLspOrder"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <ComboBox Name="BoxLspOrder"
                                          Grid.Column="2"
                                          MinWidth="140"
                                          ItemsSource="{x:Bind listLspOrder}"
                                          SelectionChanged="BoxLspOrder_SelectionChanged" />
                            </Grid>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                          FontSize="16"
                                          Glyph="&#xF140;" />
                                <TextBlock Grid.Column="1"
                                           x:Uid="TextLspR22"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <ToggleSwitch Name="ToggleLspR22"
                                              Grid.Column="2"
                                              MinWidth="0"
                                              Toggled="ToggleLspR22_Toggled" />
                            </Grid>
                        </StackPanel>
                    </muxc:Expander.Content>
                </muxc:Expander>

                <TextBlock x:Uid="TextSettingsGeneral"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Margin="0,24,0,0" />
                <muxc:Expander ExpandDirection="Down"
                               IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               Margin="0,8,0,0">
                    <muxc:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      FontSize="16"
                                      Glyph="&#xE790;" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,12"
                                        Orientation="Vertical">
                                <TextBlock x:Uid="SettingsThemeTitle"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock x:Uid="SettingsThemeDesc"
                                           TextWrapping="NoWrap"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <TextBlock Grid.Column="2"
                                       Name="TextThemeCur"
                                       TextWrapping="NoWrap"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                        </Grid>
                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <muxc:RadioButtons x:Name="RbTheme"
                                           Margin="28,0,0,0"
                                           SelectionChanged="RbTheme_SelectionChanged">
                            <RadioButton x:Name="RbThemeLight"
                                         x:Uid="RbThemeLight"
                                         Tag="light" />
                            <RadioButton x:Name="RbThemeDark"
                                         x:Uid="RbThemeDark"
                                         Tag="dark" />
                            <RadioButton x:Name="RbThemeSys"
                                         x:Uid="RbThemeSys"
                                         Tag="" />
                        </muxc:RadioButtons>
                    </muxc:Expander.Content>
                </muxc:Expander>
                <muxc:Expander ExpandDirection="Down"
                               IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               Margin="0,8,0,0">
                    <muxc:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      FontSize="16"
                                      Glyph="&#xE728;" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,12"
                                        Orientation="Vertical">
                                <TextBlock x:Uid="SettingsSaveTitle"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock x:Uid="SettingsSaveDesc"
                                           TextWrapping="NoWrap"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <Button Grid.Column="2"
                                    Name="BtnShowSave"
                                    x:Uid="BtnShowSave"
                                    VerticalAlignment="Center"
                                    Click="BtnShowSave_Click" />
                        </Grid>
                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <Grid Margin="28,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Uid="TextCache"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                            <Button Grid.Column="1"
                                    Name="BtnShowCache"
                                    x:Uid="BtnShowCache"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="BtnShowCache_Click" />
                        </Grid>
                    </muxc:Expander.Content>
                </muxc:Expander>
                <muxc:Expander ExpandDirection="Down"
                               IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               Margin="0,8,0,0">
                    <muxc:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      FontSize="16"
                                      Glyph="&#xE943;" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,12"
                                        Orientation="Vertical">
                                <TextBlock x:Uid="SettingsIniTitle"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock x:Uid="SettingsIniDesc"
                                           TextWrapping="NoWrap"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <Grid Margin="28,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Uid="TextIni"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                            <Button Grid.Column="1"
                                    Name="BtnIni"
                                    x:Uid="BtnIni"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="BtnIni_Click" />
                        </Grid>
                    </muxc:Expander.Content>
                </muxc:Expander>

                <TextBlock x:Uid="TextSettingsOther"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Margin="0,24,0,0" />
                <muxc:Expander ExpandDirection="Down"
                               IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               Margin="0,8,0,0">
                    <muxc:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      FontSize="16"
                                      Glyph="&#xE8E1;" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,12"
                                        Orientation="Vertical">
                                <TextBlock x:Uid="SettingsReviewTitle"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock Name="SettingsReviewDesc"
                                           x:Uid="Glitter"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="NoWrap" />
                            </StackPanel>
                            <Button Grid.Column="2"
                                    Name="BtnReview"
                                    x:Uid="BtnReview"
                                    VerticalAlignment="Center"
                                    Click="BtnReview_Click" />
                        </Grid>
                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <StackPanel Margin="28,0,0,0">
                            <TextBlock TextWrapping="WrapWholeWords"
                                       Style="{StaticResource BodyTextBlockStyle}">
                                <!-- Note: don't put Hyperlink element start to the next line, otherwise unexpected whitespace will be add. -->
                                <Span xml:space="default">
                                    <Run x:Uid="TextReview0" />
                                    <Hyperlink x:Uid="LinkReview"
                                               UnderlineStyle="None">
                                        <Run x:Uid="TextReview1" />
                                    </Hyperlink>
                                    <Run x:Uid="TextReview2" />
                                </Span>
                            </TextBlock>
                            <TextBlock TextWrapping="WrapWholeWords"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,8,0,0">
                                <Span xml:space="default">
                                    <Run x:Uid="TextDonate0" />
                                    <Hyperlink x:Uid="LinkDonate"
                                               UnderlineStyle="None"
                                               Click="LinkDonate_Click">
                                        <Run x:Uid="TextDonate1" />
                                    </Hyperlink>
                                    <Run x:Uid="TextDonate2" />
                                </Span>
                            </TextBlock>
                            <TextBlock TextWrapping="WrapWholeWords"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,8,0,0">
                                <Span xml:space="default">
                                    <Run x:Uid="TextContatc0" />
                                    <Hyperlink x:Uid="LinkOpenSource"
                                               UnderlineStyle="None">
                                        <Run x:Uid="TextContatc1" />
                                    </Hyperlink>
                                    <Run x:Uid="TextContatc2" />
                                    <Hyperlink x:Uid="LinkEmail"
                                               UnderlineStyle="None">
                                        <Run x:Uid="TextContatc3" />
                                    </Hyperlink>
                                    <Run x:Uid="TextContatc4" />
                                </Span>
                            </TextBlock>
                        </StackPanel>
                    </muxc:Expander.Content>
                </muxc:Expander>
                <muxc:Expander ExpandDirection="Down"
                               Name="ExpanderThank"
                               IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               Margin="0,8,0,0">
                    <muxc:Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      FontSize="16"
                                      Glyph="&#xEB51;" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,12"
                                        Orientation="Vertical">
                                <TextBlock x:Uid="SettingsThankTitle"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                                <TextBlock Name="SettingsThankDesc"
                                           x:Uid="Glitter"
                                           TextWrapping="NoWrap"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </muxc:Expander.Header>
                    <muxc:Expander.Content>
                        <StackPanel Margin="28,0,0,0">
                            <TextBlock x:Uid="TextThankIcon"
                                       TextWrapping="WrapWholeWords"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                            <TextBlock x:Uid="TextThankCode"
                                       TextWrapping="WrapWholeWords"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,8,0,0" />
                            <TextBlock TextWrapping="WrapWholeWords"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,8,0,0">
                                <Span xml:space="default">
                                    <Run x:Uid="TextThankAd" />
                                    <Hyperlink x:Uid="LinkAd"
                                               UnderlineStyle="None">
                                        <Run x:Uid="TextView" />
                                    </Hyperlink>
                                </Span>
                            </TextBlock>
                            <TextBlock Name="TextThankDonate"
                                       TextWrapping="WrapWholeWords"
                                       Visibility="Collapsed"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Margin="0,8,0,0">
                                <Span xml:space="default">
                                    <Run x:Name="TextDonators" />
                                    <Hyperlink x:Name="LinkDonators"
                                               UnderlineStyle="None">
                                        <Run x:Name="TextExpand" />
                                    </Hyperlink>
                                </Span>
                            </TextBlock>
                        </StackPanel>
                    </muxc:Expander.Content>
                </muxc:Expander>
                
                <TextBlock x:Uid="TextAbout"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Margin="0,24,0,0" />
                <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,8,0,0">
                    <Span xml:space="default">
                        <Run x:Name="TextApp" />
                        <Hyperlink x:Name="LinkRelease"
                                   UnderlineStyle="None">
                            <Run x:Name="TextRelease" />
                        </Hyperlink>
                    </Span>
                </TextBlock>
                <TextBlock x:Uid="TextCopyright"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

            </StackPanel>
        </ScrollViewer>

    </Grid>

</UserControl>
